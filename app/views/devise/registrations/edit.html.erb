<div class="wrap">
  <nav class="nav-bar navbar-default" role="navigation">
      <div id ="top-menu" class="container-fluid active">
           <%= render 'layouts/logo' %>
          <%= render 'layouts/user_nav' %>
      </div>      
  </nav>
  <%= render 'layouts/user_side_nav' %>
  
  <!--Body content-->
  <div class="content">
    <div class="top-bar" style="background: white !important;">       
      <a href="#menu" class="side-menu-link burger"> 
        <span class='burger_inside' id='bgrOne'></span>
        <span class='burger_inside' id='bgrTwo'></span>
        <span class='burger_inside' id='bgrThree'></span>
      </a>      
    </div>
    <section class="content-inner" style="width: 97% !important; margin: 0 auto !important; height: auto !important;">
         

          
    <br /><h3 style="display:none;">NextPakk Customer #<%= current_user.packs_num %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: :true }) do |f| %>
  <%= devise_error_messages! %>
<p><strong><h2>Change Profile Pic</h2></strong></p> 
<div class="form-group">
    <%= f.label :image do %><br>
    <%= f.file_field :image, class: "form-control", style: "display:none;" %>
    <span class="text-center pull-right " id="npPrfPic" style="max-width: 65px;  border: 3px solid #b0b0b0;" >
                                          <% if current_user.image.present? %>
                                            <%= image_tag current_user.image, class: "img-responsive circle-avatar center-block" %>
                                            <% else %>
                                              <%= image_tag "/assets/fallback/default.png", class: "img-responsive circle-avatar center-block" %>
                                            <% end %>

                                        </span>
  <% end %>
  </div>
 <br /><h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 <p><strong><h2>Confirm Changes</h2></strong></p>
<div class="form-gorup">
    <%= f.label :current_password %> <i>(<strong>we need your current password to confirm and save your changes</strong>)</i>
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div><br />
 <p><strong><h2>Change Password</h2></strong></p>
  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <% if @minimum_password_length %>
      
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <br />

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back, class: "btn btn-link" %>
    </section>
  </div>  
  
</div>