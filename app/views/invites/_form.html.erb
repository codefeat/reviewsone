<%= simple_form_for(@invite) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :user_group_id %>
    <%= f.input :sender_id %>
    <%= f.input :recipient_id %>
    <%= f.input :token %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
