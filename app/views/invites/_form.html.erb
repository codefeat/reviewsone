<%= simple_form_for Invite.new do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :lname %>
    <%= f.input :email %>
    <%= f.input :user_id %>
    <%= f.input :token %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :token, value: @form_auth_token %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
