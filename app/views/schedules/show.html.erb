                        <div class="row">
                           
                            <div class="col-xs-2 col-sm-2 hidden-md hidden-lg">
                                <span class="cust-block-icons" style="color: orange !important; font-size: 50px !important;"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                            <div class="col-xs-10 col-sm-10 hidden-md hidden-lg">
                                <strong>Day</strong><br>
                                <dl>
                                    
                                    <dd><%= @schedule.day.strftime("%A") %></dd>
                                    <dt>Date</dt>
                                    <dd><%= @schedule.day %></dd>
                                    <dt>Window</dt>
                                    <dd><%= @schedule.slot.window %></dd>
                                    
                                </dl>
                            </div>
                            
                        </div>
                    </div>
